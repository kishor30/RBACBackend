	create book	
		
		curl --location --request POST 'localhost:9091/books/create' \
--header 'Content-Type: application/json' \
--header 'Cookie: JSESSIONID=55F6C9B9B9259DE02A6FBCE18996A94A' \
--data-raw '  {
            "bookId": 12,
            "bookname": "origin",
            "price": 450.0,
            "author": "Dan Brown"
        }'
		
		
		
		
		-----------------------------------------------
		delete book
		
		curl --location --request DELETE 'localhost:9091/books/remove/3' \
--header 'Authorization: Basic c2Fua2V0LmdhcmRpQGdtYWlsLmNvbTpzYW5rZXQzMA==' \
--header 'Cookie: JSESSIONID=55F6C9B9B9259DE02A6FBCE18996A94A'






